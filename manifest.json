{
	"manifest_version": 2,
	
	"name": "IVisual",
	"description": "Add a better visualizer to Google Play Music",
	"version": "1.0",
	
	"content_scripts": [ {
		"matches": [ "*://play.google.com/music/*", "*://www.youtube.com/watch*" ],
		"run_at": "document_end",
		"js": [ "/js/jquery.min.js", "/js/visualizer.js" ]
	} ],
	
	"icons": {
      "128": "/images/icon128.png",
      "16": "/images/icon16.png",
      "48": "/images/icon48.png"
   },
   
   "web_accessible_resources": [ 
		"js/visualizer.js",
		"css/*.css",
		"images/*.png",
		"html/*.html"
	]
}